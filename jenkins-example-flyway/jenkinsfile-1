pipeline {
    agent any
    stages {
        stage('Docker Initialize'){
        def dockerHome = tool 'myDocker'
        env.PATH = "${dockerHome}/bin:${env.PATH}"
                        }
        stage ('Verify version') {
            steps{
                sh 'pwd'
                sh 'docker run --rm flyway/flyway'
                sh 'docker run --rm flyway/flyway:8.5.1 version'
            }
        }
    }
}
